START=$(date +%s.%N)
echo "current pid:" $$

timestamp=`date +%y%m%d%H%M`
trecrun=/GW/D5data-2/khui/trecrun/adhoc/perquery30qrel
qrelf=/GW/D5data-2/khui/qrel/completeqrel/adhocquery
outputfolder=/scratch/GW/pool0/khui/result/2stagelowcost/comparativestd/statAP/qrels
outipfolder=/scratch/GW/pool0/khui/result/2stagelowcost/comparativestd/statAP/prels
samplerates="0.01 0.05 0.1 0.15 0.2 0.25 0.3 0.35 0.4 0.45 0.5 0.55 0.6 0.65 0.7 0.75 0.8 0.85 0.9 0.95"

if [ -d $outputfolder ];
then
	echo 'removing ' $outputfolder
	rm -rf $outputfolder
fi
if [ -d $outipfolder ];
then
	echo 'removing ' $outipfolder
	rm -rf $outipfolder
fi


for percent in $samplerates
do
	for sid in `seq 1 30`
	do
		for ((qid=$1; qid<=$2; qid++))
		do
			python $PWD/statAP.py \
				-q $qid \
				-r $trecrun/$qid \
				-o $outputfolder/$percent/$sid \
				-j $qrelf/$qid \
				-p $percent \
				-i $outipfolder/$percent
		echo finished `hostname` $timestamp $qid $percent $sid
		done

	done
done

END=$(date +%s.%N)
DIFF=$(echo "$END - $START" | bc)
echo "finished: "$DIFF
